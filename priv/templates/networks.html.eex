     <div class="container access-points-container">
       
       Choose a network from following list:
       <div class="my-3 p-3 bg-white rounded shadow-sm">
         <table class="table table-hover access-points-table">
             <thead>
                <tr>
                  <th scope="col">SSID</th>
                  <th scope="col">Security</th>
                  <th scope="col">Signal Strength</th>
                </tr>
             </thead>
             <tbody>
           </tbody>
         </table>
       </div>

       <a class="btn btn-primary" href="/networks/new" style="background-color:<%= ui.button_color %>">Add another network</a>
     </div>

     <div>
     <button class="btn btn-in2green start-button">
					<span class="button-text">Start</span>
					 (if device_info.starting do<span class="button-text-loading hidden">Starting...</span>
				</button>
				<button class="btn btn-secondary reboot-button">
					<span class="button-text text-red-500">Reboot</span>
					 if device_info.rebooting do %><span class="button-text-loading text-red-500 hidden">Rebooting...</span>
				</button>
     </div>

     <footer class="py-3 bg-white shadow-sm w-100 text-muted">
       <div class="container">
         
        </div>
     </footer>
